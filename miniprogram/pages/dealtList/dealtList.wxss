/* miniprogram/pages/dealtList/dealtList.wxss */
page {
  background-color: #fff;
}

.wrapper {
  padding-bottom: 68rpx;
}

.card-list { 
  padding: 0 20rpx;
}

.card-item {
  background-color:#fff;
  box-shadow: 3rpx 3rpx 20rpx 5rpx #c8c8c8;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 15rpx;
}

.time {
  display: flex;
  font-size: 28rpx;
  line-height: 70rpx;
  color: #999;
}

.time>view {
  flex: 1;
}

.time>view:nth-child(2) {
  text-align: right;
}

.con {
  display: flex;
}

.type {
  font-size: 28rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #1cbbb4;
  border-radius: 50%;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.title {
  color: #333;
  flex: 1;
  line-height: 80rpx;
  padding-left: 20rpx;
}

.btn {
  display: flex;
  line-height: 80rpx;
  color: #999;
}

.btn>view {
  margin-right: 15rpx;
  font-size: 28rpx;
  color: #1cbbb4;
}

.note {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.add-btn {
  background-color: #1cbbb4;
  color: #fff;
  width: 90rpx;
  height: 90rpx;
  line-height: 80rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 200rpx;
  right: 50rpx;
  font-size: 64rpx;
  text-align: center;
}

.head-title{
  font-size: 34rpx;
  color: #333;
  padding: 30rpx 0;
  font-weight: 600;
  margin-left: 10rpx;
}
.no-data{
  font-size: 34rpx; 
  margin-top: 30%;
  text-align: center;
  color: #b1b1b1;
}

.todo-img{
  width:90rpx;
  height: 90rpx;
  display:inline-block;
  margin:15rpx 15rpx 15rpx 0;
}